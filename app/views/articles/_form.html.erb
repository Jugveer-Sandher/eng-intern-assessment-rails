<%= form_with(model: article, class: "custom-article-form") do |form| %>
  <div class="form-group">
    <%= form.label :title, class: "custom-label" %>
    <%= form.text_field :title, class: "custom-input" %>
  </div>

  <div class="form-group">
    <%= form.label :content, class: "custom-label" %>
    <%= form.text_area :content, class: "custom-input" %>
  </div>

  <div class="form-group">
    <%= form.label :author, class: "custom-label" %>
    <%= form.text_field :author, class: "custom-input" %>
  </div>

  <div class="form-group">
    <%= form.label :date, class: "custom-label" %>
    <%= form.date_field :date, class: "custom-input" %>
  </div>

  <div class="form-actions">
    <%= form.submit class: "custom-submit-button" %>
  </div>
<% end %>
